{{>header}}
<title>CRUD - Home</title>
{{>navbar}}

<div class="container my-3">
    <h5 class="bg-dark p-2 text-light text-center rounded">
        Employee Data
    </h5>

    <div class="table-responsive mt-3">
        <table class="table table-hover table-bordered align-middle mb-0" id="dataTables">
            <thead class="table-dark text-center">
                <tr>
                    <th style="width:18%">Id</th>
                    <th style="width:18%">Name</th>
                    <th style="width:22%">Email</th>
                    <th style="width:14%">City</th>
                    <th style="width:14%">State</th>
                    <th colspan="2" style="width:14%">Actions</th>
                </tr>
            </thead>

            <tbody>
                {{#each data}}
                    <tr>
                        <td class="text-truncate" title="{{_id}}">
                            {{_id}}
                        </td>
                        <td>{{name}}</td>
                        <td class="text-truncate" title="{{email}}">
                            {{email}}
                        </td>
                        <td>{{city}}</td>
                        <td>{{state}}</td>
                        <td class="text-center">
                            <a class="btn btn-outline-dark btn-sm" href="/edit/{{_id}}">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a
                                class="btn btn-outline-danger btn-sm"
                                href="/delete/{{_id}}"
                                onclick="return confirm('Are you sure you want to delete this employee?')"
                            >
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{>footer}}
