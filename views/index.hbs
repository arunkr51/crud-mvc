{{>header}}
     <title>CRUD - Home</title>
{{>navbar}}
<div class="container-fluid my-3">
     <h5 class="bg-dark p-2 text-light text-center">Employee Data</h5>
     <table class="table table-striped table-bordered" id="dataTables">
          <thead>
               <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Designation</th>
                    <th>Salary</th>
                    <th>City</th>
                    <th>State</th>
                    <th></th>
                    <th></th>
               </tr>
          </thead>
          <tbody>
               {{#each data}}
               <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{phone}}</td>
                    <td>{{designation}}</td>
                    <td>{{salary}}</td>
                    <td>{{city}}</td>
                    <td>{{state}}</td>
                    <td><a class="btn btn-dark text-light" href="/edit/{{_id}}"><i class="fa fa-edit"></i></a></td>
                    <td><a class="btn btn-danger text-light" href="/delete/{{_id}}"><i class="fa fa-trash"></i></a></td>
               </tr>
               {{/each}}
          </tbody>
     </table>
</div>
{{>footer}}