{{>header}}
<title>CRUD - Edit Employee</title>
{{>navbar}}

<div class="container my-3">
    <h5 class="bg-dark p-2 text-light text-center">
        Update Employee Data
    </h5>

    <form action="/update/{{data._id}}" method="post" novalidate>
        <div class="row">

            <!-- Name -->
            <div class="col-12 mb-3">
                <label class="form-label">Name *</label>
                <input
                    type="text"
                    name="name"
                    placeholder="Full name"
                    value="{{data.name}}"
                    class="form-control {{#if errorMessage.name}}border-danger{{else}}border-secondary{{/if}}"
                >
                {{#if errorMessage.name}}
                    <small class="text-danger">{{errorMessage.name}}</small>
                {{/if}}
            </div>

            <!-- Email -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Email *</label>
                <input
                    type="email"
                    name="email"
                    placeholder="Enter your email"
                    value="{{data.email}}"
                    class="form-control {{#if errorMessage.email}}border-danger{{else}}border-secondary{{/if}}"
                >
                {{#if errorMessage.email}}
                    <small class="text-danger">{{errorMessage.email}}</small>
                {{/if}}
            </div>

            <!-- City -->
            <div class="col-md-6 mb-3">
                <label class="form-label">City</label>
                <input
                    type="text"
                    name="city"
                    placeholder="Enter your city"
                    value="{{data.city}}"
                    class="form-control border-secondary"
                >
            </div>

            <!-- State -->
            <div class="col-12 mb-3">
                <label class="form-label">State</label>
                <input
                    type="text"
                    name="state"
                    placeholder="Enter your state"
                    value="{{data.state}}"
                    class="form-control border-secondary"
                >
            </div>

            <!-- Submit -->
            <div class="col-12 mb-3">
                <button type="submit" class="btn btn-dark w-100">
                    Update
                </button>
            </div>

        </div>
    </form>
</div>

{{>footer}}
